@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "Admin Kategori Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1 class="text-center">Admin Kategori Ekleme</h1>
<br />

<div class="container">
    <form class="form-group" method="post">
        <div class="row">
            <div class="col-4">
                <input type="text" placeholder="Kategori Ad" name="CategoryName" class="form-control" />
                @Html.ValidationMessageFor(x => x.CategoryName)
            </div>

            <div class="col-4">
                <input type="text" placeholder="Açıklama" name="CategoryDescription" class="form-control" />
                @Html.ValidationMessageFor(x => x.CategoryDescription)
            </div>

            <div class="col-4">
                <select class="form-control form-select" name="CategoryStatus">
                    <option value="True">Aktif</option>
                    <option value="False">Pasif</option>
                </select>
                @Html.ValidationMessageFor(x => x.CategoryStatus)
            </div>
        </div>

        <div class="row">
            <div class="text-center mt-5">
                <button class="btn btn-outline-success" type="submit">Ekle</button>
            </div>
        </div>
    </form>
</div>