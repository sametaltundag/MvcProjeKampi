@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<table class="table table-hover">
    <tr>
        <th>NO</th>
        <th>Başlık</th>
        <th>Yazar Adı</th>
        <th>Yazar Soyadı</th>
        <th>Eposta</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.WriterID</td>
            <td>@item.Headings</td>
            <td>@item.WriterName</td>
            <td>@item.WriterSurname</td>
            <td>@item.WriterMail</td>
        </tr>
    }
</table>

